        <div class="addcase" >
            <form action="/addcase" method="POST"
                style="padding: 10px; margin-top: 60px; text-align: center;">
                <div class="row" style="background-color: white; padding:5%;margin-left: 10%;margin-right: 10%; border-radius: 10px; margin-top: -3%;margin-bottom: 0%;" >
                <div class="form" style="background-color: white;">

                    <% if(error) { %>
                        <p style="color:red;"> * <%= error %> * </p>
                    <% } %>
                    
                    <input type="text" placeholder="Case title" name="caseTitle" id="name">
                    <br>
                    <input type="text" placeholder="Name of the defendant" name="defendantName" id="name">
                    <br>
                    <input type="text" placeholder="Defendant's address" name="defendantAddress" id="name">
                    <br>
                    <input type="text" placeholder="Crime Type" name="crimeType" id="name">
                    <br>
                    <label>Committed date of case</label>
                    <br>
                    <input type="date" placeholder="Committed date of case" name="committedDate" id="date">
                    <br>
                    <input type= "text" placeholder="Committed case location" name="committedLocation" id="location">
                    <br> 
                    <input type="text" placeholder="Name of arresting officer" name="arrestingOfficer" id="name">
                    <br>
                    <label>Date of arrest</label>
                    <br>
                    <input type="date" placeholder="Date of arrest" name="dateOfArrest" id="date">
                    <br>
                    <input type="text" placeholder="Name of presiding judge" name="presidingJudge" id="name">
                    <br>
                    <input type="text" placeholder="Public prosecutor" name="publicProsecutor" id="name">
                    <br>
                    <label>Date of hearing</label>
                    <br>
                    <input type="date" placeholder="Date of hearing" name="dateOfHearing" id="date">
                    <br>
                    <label>Expected completion date</label>
                    <br>
                    <input type="date" placeholder="Completion Date of hearing" name="completionDate" id="date">
                    <div class="btns">
                        <button type="submit" id="btn" class="btn " style="background-color:rgb(107, 14, 194); color: white;"> Add Case </button>
                    </div>
                </div>
                
