    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
    <title>Case details</title>
    <style>

        body{
            background-image:linear-gradient(to right,#EE6D98,#8A5EBF) ;
        }

.navbar-brand {
            margin-left: 20px;
            margin-top: 2px;
        }

        .nav-item {
            margin: 10px;
            /* margin-top: 2px; */
            font-size: 16px;
            font-weight: 700;
            line-height: 24px;
            font-family: 'Poppins', sans-serif;
            ;
        }

        .footer{
            background-image: linear-gradient(to right,#EE6D98,#8A5EBF);
            position: relative;
            top: 20vh;
            
        }

h1 {
            font-family: 'Comic Sans MS', 'Comic Sans', cursive;
        }
         input,
        textarea,p {
            padding: 10px;
            border: none;
            border-radius: 10px;
            margin: 10px;
            font-size: 16px;
            font-weight: 500;
            line-height: 24px;
            font-family: 'Poppins', sans-serif;
            width: 100%;
            background-color: rgba(129, 125, 125, 0.137);
        }
        label{
            font-size: 16px;
            font-weight: 500;
            line-height: 24px;
            font-family: 'Poppins', sans-serif;
            color: purple;
            align-self: center;
            margin-left: 20px;
        }
        .btns{
            display: flex;
            justify-content: center;
        }

        .heading {
            text-align: center;
            margin: 10px;
            padding: 10px;
        }

        h1 {
            font-size: 2.5rem;
        }
    </style>
</head>
<body>

    <% if(current.isRegistrer) { %>

      <%- include('partials/registrarNavBar.ejs') -%>
 
    <% } %>

    <% if(current.isLawer) { %>
     
       <%- include('partials/lawerNavBar.ejs') -%>

    <% } %>

    <% if(current.isJudge) { %>

        <%- include('partials/judgeNavBar.ejs') -%>

    <% } %>

    <div>
        <form action="/changepassword" method="POST"
            style="padding: 10px; margin-top: 60px; text-align: center;">
            <div class="row" style="background-color: white; padding:5%;margin-left: 10%;margin-right: 10%; border-radius: 10px; margin-top: -3%;margin-bottom: 0%;" >
            <div class="form" style="background-color: white;">

                <% if(error.length>0) { %>
                    <p style="color:red;"> * <%= error %> * </p>
                <% } %>
                
                <input type="password" name="currentPassword" id="currentPassword"  placeholder="Enter Current Password"/>
                <br/>
                <input type="password" name="newPassword" id="newPassword"  placeholder="Enter New Password"/>
                <br/>
                <input type="password" name="confirmPassword" id="confirmPassword"  placeholder="Re-Enter New Password"/>
               
                <div class="btns">
                    <button type="submit" id="btn" class="btn " style="background-color:rgb(107, 14, 194); color: white;"> Change Password </button>
                </div>
            </div>
            
            </div>
        </form>
    </div>

    <%- include('partials/modals.ejs') -%>


    <%- include('partials/footer.ejs') -%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>
</html>